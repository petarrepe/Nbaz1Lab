<Window x:Class="Nbaz1Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nbaz1Lab"
        mc:Ignorable="d"
        Title="NBAZ" Height="350" Width="525" WindowState="Maximized" Closing="Window_Closing">
    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Margin="0" Background="#FFE4E4E4" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="4">
            <ListBox x:Name="menuListBox" Height="Auto" Margin="0,50,0,0" VerticalAlignment="Top" SelectionChanged="menuListBox_SelectionChanged"/>
        </Grid>
        <Button x:Name="acceptButton" Content="Potvrdi" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="3" VerticalAlignment="Bottom" Width="75" Click="acceptButton_Click"/>

    </Grid>
</Window>
